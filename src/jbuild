(library
 ((name        usb)
  (public_name usb)
  (libraries (lwt.unix))
  (preprocess (pps (ppx_sexp_conv)))
  (c_names (usb_stubs))
  (c_flags (:include c_flags.sexp))
  (c_library_flags (:include c_library_flags.sexp))))

(rule
 ((targets (c_flags.sexp
            c_library_flags.sexp))
  (deps    (config/discover.exe))
  (action  (run ${<} -ocamlc ${OCAMLC}))))
